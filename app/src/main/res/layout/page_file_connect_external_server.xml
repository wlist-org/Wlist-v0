<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<androidx.constraintlayout.widget.Barrier
		android:id="@+id/page_file_connect_external_server_barrier"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:barrierDirection="right"
		app:constraint_referenced_tags="page_file_connect_external_server_info" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_connect_external_server_host_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:tag="page_file_connect_external_server_info"
		android:text="@string/page_file_connect_external_server_host"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintTop_toTopOf="@id/page_file_connect_external_server_host" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/page_file_connect_external_server_host"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@id/page_file_connect_external_server_port"
		app:layout_constraintLeft_toRightOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_connect_external_server_port_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:tag="page_file_connect_external_server_info"
		android:text="@string/page_file_connect_external_server_port"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintTop_toTopOf="@id/page_file_connect_external_server_port" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/page_file_connect_external_server_port"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@id/page_file_connect_external_server_username"
		app:layout_constraintLeft_toRightOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_file_connect_external_server_host" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_connect_external_server_username_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:tag="page_file_connect_external_server_info"
		android:text="@string/page_file_connect_external_server_username"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintTop_toTopOf="@id/page_file_connect_external_server_username" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/page_file_connect_external_server_username"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@id/page_file_connect_external_server_password"
		app:layout_constraintLeft_toRightOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_file_connect_external_server_port" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_connect_external_server_password_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:tag="page_file_connect_external_server_info"
		android:text="@string/page_file_connect_external_server_password"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintTop_toTopOf="@id/page_file_connect_external_server_password" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/page_file_connect_external_server_password"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_connect_external_server_barrier"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_file_connect_external_server_username" />

</androidx.constraintlayout.widget.ConstraintLayout>
