<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_loading_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5" />

	<View
		android:id="@+id/page_file_loading_left"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/loading_bar_b"
		app:layout_constraintBottom_toBottomOf="@id/page_file_loading_right"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_loading_guideline"
		app:layout_constraintTop_toTopOf="@id/page_file_loading_right" />

	<View
		android:id="@+id/page_file_loading_right"
		android:layout_width="0dp"
		android:layout_height="5dp"
		android:background="@color/loading_bar_a"
		app:layout_constraintBottom_toTopOf="@id/page_file_loading_percent"
		app:layout_constraintLeft_toRightOf="@id/page_file_loading_guideline"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_loading_percent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center_vertical|end"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_loading_text"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_file_loading_right" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_loading_text"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="@id/page_file_loading_percent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_loading_percent"
		app:layout_constraintTop_toTopOf="@id/page_file_loading_percent" />


</androidx.constraintlayout.widget.ConstraintLayout>
