<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/activity_main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/background_differ">

	<View
		android:id="@+id/activity_main_title"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/background_normal"
		android:orientation="horizontal"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/activity_main_tasks"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:adjustViewBounds="true"
		android:paddingStart="10dp"
		android:paddingTop="15dp"
		android:paddingEnd="10dp"
		android:paddingBottom="15dp"
		android:src="@mipmap/main_chooser_trans"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/activity_main_title"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/activity_main_options"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:adjustViewBounds="true"
		android:src="@drawable/page_file_options"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/activity_main_title"
		app:layout_constraintRight_toLeftOf="@id/activity_main_tasks"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/activity_main_chooser_file"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:background="@color/background_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/activity_main_chooser_user" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/activity_main_chooser_file_image"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:background="@color/background_normal"
		android:scaleType="centerInside"
		android:src="@mipmap/main_chooser_file"
		app:layout_constraintBottom_toTopOf="@id/activity_main_chooser_file_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/activity_main_chooser_user_image"
		app:layout_constraintTop_toTopOf="@id/activity_main_chooser_file"
		tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/activity_main_chooser_file_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:autoSizeTextType="uniform"
		android:text="@string/activity_main_chooser_file"
		android:textColor="@color/text_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/activity_main_chooser_file_image"
		app:layout_constraintRight_toRightOf="@id/activity_main_chooser_file_image"
		app:layout_constraintTop_toBottomOf="@id/activity_main_chooser_file_image" />

	<View
		android:id="@+id/activity_main_chooser_user"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:background="@color/background_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/activity_main_chooser_file"
		app:layout_constraintRight_toRightOf="parent" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/activity_main_chooser_user_image"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:background="@color/background_normal"
		android:scaleType="fitCenter"
		android:src="@mipmap/main_chooser_user"
		app:layout_constraintBottom_toTopOf="@id/activity_main_chooser_user_text"
		app:layout_constraintLeft_toRightOf="@id/activity_main_chooser_file_image"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/activity_main_chooser_file"
		tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/activity_main_chooser_user_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:autoSizeTextType="uniform"
		android:text="@string/activity_main_chooser_user"
		android:textColor="@color/text_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/activity_main_chooser_user_image"
		app:layout_constraintRight_toRightOf="@id/activity_main_chooser_user_image"
		app:layout_constraintTop_toBottomOf="@id/activity_main_chooser_user_image" />

	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/activity_main_content"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toTopOf="@id/activity_main_chooser_file"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/activity_main_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
