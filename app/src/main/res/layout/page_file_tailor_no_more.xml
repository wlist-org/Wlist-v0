<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="50dp">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_tailor_no_more_guideline_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.1" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_tailor_no_more_guideline_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.9" />

	<View
		android:id="@+id/page_file_tailor_no_more_left"
		android:layout_width="0dp"
		android:layout_height="2dp"
		android:background="@color/line"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_tailor_no_more_guideline_left"
		app:layout_constraintRight_toLeftOf="@id/page_file_tailor_no_more_text"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/page_file_tailor_no_more_right"
		android:layout_width="0dp"
		android:layout_height="2dp"
		android:background="@color/line"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_tailor_no_more_text"
		app:layout_constraintRight_toLeftOf="@id/page_file_tailor_no_more_guideline_right"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_tailor_no_more_text"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="30dp"
		android:layout_marginBottom="10dp"
		android:autoSizeTextType="uniform"
		android:gravity="center"
		android:lines="1"
		android:text="@string/page_file_no_more"
		android:textColor="@color/text_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_tailor_no_more_left"
		app:layout_constraintRight_toLeftOf="@id/page_file_tailor_no_more_right"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
