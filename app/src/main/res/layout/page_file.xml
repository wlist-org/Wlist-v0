<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_guideline_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_begin="50dp" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_guideline_backer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.1" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/page_file_backer"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:paddingStart="10dp"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:src="@drawable/backer"
		app:layout_constraintBottom_toTopOf="@id/page_file_guideline_title"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_guideline_backer"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="RtlSymmetry" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_name"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:ellipsize="end"
		android:gravity="center_vertical|start"
		android:maxLines="1"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:text="@string/app_name"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@id/page_file_guideline_title"
		app:layout_constraintLeft_toRightOf="@id/page_file_guideline_backer"
		app:layout_constraintRight_toLeftOf="@id/page_file_counter"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_counter"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center_vertical|end"
		android:text="0"
		android:textColor="@color/text_normal"
		android:textSize="20sp"
		app:layout_constraintBottom_toTopOf="@id/page_file_guideline_title"
		app:layout_constraintLeft_toRightOf="@id/page_file_name"
		app:layout_constraintRight_toLeftOf="@id/page_file_counter_text"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="HardcodedText" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_counter_text"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center_horizontal|end"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:text="@string/page_file_counter"
		android:textColor="@color/text_normal"
		android:textSize="15sp"
		app:layout_constraintBaseline_toBaselineOf="@id/page_file_counter"
		app:layout_constraintLeft_toRightOf="@id/page_file_counter"
		app:layout_constraintRight_toRightOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/page_file_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_file_guideline_title" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/page_file_uploader"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/page_file_upload"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
