<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="50dp">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_file_tailor_loading_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.3" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/page_file_tailor_loading_image"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:scaleType="center"
		android:src="@mipmap/page_file_loading"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/page_file_tailor_loading_guideline"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/page_file_tailor_loading_text"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center"
		android:text="@string/page_file_loading"
		android:textColor="@color/normal_text"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/page_file_tailor_loading_guideline"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
