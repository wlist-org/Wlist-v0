<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="50dp">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/activity_main_options_cell_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:scaleType="centerInside"
		android:src="@mipmap/app_logo"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/activity_main_options_cell_name"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/activity_main_options_cell_name"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:autoSizeTextType="uniform"
		android:gravity="center"
		android:maxLines="1"
		android:textColor="@color/text_normal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/activity_main_options_cell_image"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
