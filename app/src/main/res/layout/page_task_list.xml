<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_task_guideline_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.05" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/page_task_guideline_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.95" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/page_task_list_states"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:background="@drawable/page_task_chooser"
		app:layout_constraintBottom_toTopOf="@id/page_task_list_content"
		app:layout_constraintLeft_toRightOf="@id/page_task_guideline_left"
		app:layout_constraintRight_toLeftOf="@id/page_task_guideline_right"
		app:layout_constraintTop_toTopOf="parent">

		<View
			android:id="@+id/page_task_list_state_hint"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/page_task_chooser_hint"
			app:layout_constraintBottom_toBottomOf="@id/page_task_list_states_failure"
			app:layout_constraintLeft_toLeftOf="@id/page_task_list_states_failure"
			app:layout_constraintRight_toRightOf="@id/page_task_list_states_failure"
			app:layout_constraintTop_toTopOf="@id/page_task_list_states_failure" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/page_task_list_states_failure"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:gravity="center"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:text="@string/page_task_failure"
			android:textColor="@color/text_normal"
			android:textSize="15sp"
			app:layout_constraintBottom_toBottomOf="@id/page_task_list_states"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@id/page_task_list_states_working"
			app:layout_constraintTop_toTopOf="@id/page_task_list_states" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/page_task_list_states_working"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:gravity="center"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:text="@string/page_task_working"
			android:textColor="@color/text_normal"
			android:textSize="15sp"
			app:layout_constraintBottom_toBottomOf="@id/page_task_list_states"
			app:layout_constraintLeft_toRightOf="@id/page_task_list_states_failure"
			app:layout_constraintRight_toLeftOf="@id/page_task_list_states_success"
			app:layout_constraintTop_toTopOf="@id/page_task_list_states" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/page_task_list_states_success"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:gravity="center"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:text="@string/page_task_success"
			android:textColor="@color/text_normal"
			android:textSize="15sp"
			app:layout_constraintBottom_toBottomOf="@id/page_task_list_states"
			app:layout_constraintLeft_toRightOf="@id/page_task_list_states_working"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/page_task_list_states" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/page_task_list_content"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/page_task_list_states" />

</androidx.constraintlayout.widget.ConstraintLayout>
